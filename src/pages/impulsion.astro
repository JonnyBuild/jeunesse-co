<script is:inline define:vars={{ data }}>
  const container = document.getElementById('planning-list');
  const dayTitle = document.getElementById('current-day-title');
  const btns = document.querySelectorAll('.day-link');

  function update(day) {
    if (!data[day] || !container) return;
    
    if(dayTitle) dayTitle.innerText = day.charAt(0).toUpperCase() + day.slice(1);

    const groupedData = [];
    data[day].forEach((item) => {
      const lastItem = groupedData[groupedData.length - 1];
      if (lastItem && lastItem.a === item.a && lastItem.d === item.d) {
        const startTime = lastItem.t.split('—')[0].trim();
        const endTime = item.t.split('—')[1].trim();
        lastItem.t = `${startTime} — ${endTime}`;
      } else {
        groupedData.push({ ...item });
      }
    });

    container.innerHTML = groupedData.map((item, index) => {
      const timeSplit = item.t.split('—').map(s => s.trim());
      
      return `
      <div class="activity-card reveal-card" style="animation-delay: ${index * 0.06}s">
        <div class="accent-bar ${item.d}"></div>
        <div class="card-body">
          <div class="time-block">
            <span class="time-start">${timeSplit[0]}</span>
            <div class="time-divider"></div>
            <span class="time-end">${timeSplit[1]}</span>
          </div>
          <div class="content-area">
            <h3 class="activity-title">${item.a}</h3>
            <span class="category-badge ${item.d}">${item.d}</span>
          </div>
          <div class="icon-wrapper ${item.d}">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              ${getIconPath(item.icon)}
            </svg>
          </div>
        </div>
      </div>
    `}).join('');
  }

  function getIconPath(name) {
    const paths = {
      heart: '<path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>',
      users: '<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>',
      leaf: '<path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 1.45 10 0 0-1 0-3-4.25A4.75 4.75 0 0 1 11 20z"/>',
      vote: '<path d="m9 12 2 2 4-4"/><path d="M5 7c0-1.1.9-2 2-2h10a2 2 0 0 1 2 2v12H5V7Z"/><path d="M22 19H2"/>',
      target: '<circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/>',
      briefcase: '<rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>',
      'file-text': '<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/>',
      dumbbell: '<path d="M6 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/><path d="M18 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/><path d="M22 12h-4"/><path d="M6 12H2"/><path d="M15 12H9"/><path d="M6 7.413V16.587"/><path d="M18 7.413V16.587"/>',
      utensils: '<path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v2"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/><path d="M11 11v11"/>',
      mic: '<path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" x2="12" y1="19" y2="22"/><line x1="8" x2="16" y1="22" y2="22"/>',
      'graduation-cap': '<path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c3 3 9 3 12 0v-5"/>',
      palette: '<circle cx="13.5" cy="6.5" r=".5"/><circle cx="17.5" cy="10.5" r=".5"/><circle cx="8.5" cy="7.5" r=".5"/><circle cx="6.5" cy="12.5" r=".5"/><path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.926 0 1.648-.746 1.648-1.688 0-.437-.18-.835-.437-1.125-.29-.289-.438-.652-.438-1.125a1.64 1.64 0 0 1 1.688-1.688h1.906c3.11 0 5.64-2.53 5.64-5.64 0-4.93-4.19-8.734-10-8.734Z"/>',
      car: '<path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.7 0-1.3.3-1.8.7l-2.2 2.3S1 10.6 1 11.1v4.9c0 .6.4 1 1 1h2"/><circle cx="7" cy="17" r="2"/><circle cx="17" cy="17" r="2"/>',
      video: '<path d="m22 8-6 4 6 4V8Z"/><rect width="14" height="12" x="2" y="6" rx="2" ry="2"/>'
    };
    return paths[name] || paths.heart;
  }

  btns.forEach(btn => {
    btn.addEventListener('click', () => {
      btns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      // @ts-ignore
      update(btn.dataset.day);
    });
  });

  update('lundi');
</script>

