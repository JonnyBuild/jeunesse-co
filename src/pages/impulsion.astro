    document.addEventListener('DOMContentLoaded', () => {
      const modal = document.getElementById('intervenantModal');
      const modalName = document.getElementById('modalName');
      const modalRole = document.getElementById('modalRole');
      const modalJob = document.getElementById('modalJob');
      const modalBio = document.getElementById('modalBio');
      const modalPhoto = document.getElementById('modalPhoto');
      const closeBtn = modal.querySelector('.intervenant-modal__close');
      const backdrop = modal.querySelector('.intervenant-modal__backdrop');
      const cards = document.querySelectorAll('.intervenant-card');

      function openModal(index) {
        const intervenant = intervenants[index];
        modalName.textContent = intervenant.name;
        modalRole.textContent = intervenant.role;
        modalJob.textContent = intervenant.job;
        modalBio.innerHTML = intervenant.bio.split('\n\n').map(p => `<p>${p}</p>`).join('');
        modalPhoto.src = `${base}/assets/intervenants/${intervenant.photo}`;
        modalPhoto.alt = intervenant.name;
        modal.classList.add('active');
        modal.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
      }

      function closeModal() {
        modal.classList.remove('active');
        modal.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      }

      cards.forEach(card => {
        card.addEventListener('click', () => {
          const index = parseInt(card.dataset.intervenantIndex);
          openModal(index);
        });
        card.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            const index = parseInt(card.dataset.intervenantIndex);
            openModal(index);
          }
        });
      });

      closeBtn?.addEventListener('click', closeModal);
      backdrop?.addEventListener('click', closeModal);
      window.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeModal();
      });
    });
  </script>

