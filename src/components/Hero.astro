---
import { Image } from 'astro:assets';
import image6 from '../assets/image6.webp';
import image2 from '../assets/image2.webp';
import image4 from '../assets/image4.webp';
import image3 from '../assets/image3.webp';
const base = import.meta.env.BASE_URL;
---
<section class="hero">
  <div class="container">
    <div class="hero__grid">
      <div class="hero__content">
        <div class="hero__badge animate-in">
          <span class="dot"></span> Expertise Sociale & Éducative
        </div>
        
        <h1 class="hero__title animate-in">
          <span>L'accompagnement</span><br />
          <span class="serif">éducatif sur mesure.</span>
        </h1>
        
        <p class="hero__description text-large animate-in">
          Nous intervenons à Genève lorsque les cadres traditionnels s'essoufflent, pour co-construire un avenir qui a du sens.
        </p>
        
        <div class="hero__actions animate-in">
          <a href="#about" class="btn btn--filled">Notre vision</a>
          <a href={`${base}/impulsion`} class="btn btn--outline">Programme Impulsion</a>
        </div>
        
        <div class="hero__trust animate-in">
          <div class="trust-item">
            <span class="trust-num">10+</span>
            <span class="trust-text">ans d'expérience</span>
          </div>
          <div class="trust-divider"></div>
          <div class="trust-item">
            <span class="trust-num">HES</span>
            <span class="trust-text">Diplômés certifiés</span>
          </div>
        </div>
      </div>
      
      <div class="hero__mosaic">
        <div class="mosaic__grid">
          <div class="mosaic__item mosaic__item--main" data-speed="1.1">
            <div class="mosaic__image-wrap">
              <Image src={image6} alt="Accompagnement Jeunesse & Co" class="mosaic__img" width={600} height={450} loading="eager" fetchpriority="high" />
            </div>
          </div>
          
          <div class="mosaic__item mosaic__item--top" data-speed="0.9">
            <div class="mosaic__image-wrap">
              <Image src={image2} alt="Interaction éducative" class="mosaic__img" width={400} height={300} loading="lazy" />
            </div>
          </div>
          
          <div class="mosaic__item mosaic__item--bottom" data-speed="1.2">
            <div class="mosaic__image-wrap">
              <Image src={image4} alt="Accompagnement jeunesse" class="mosaic__img" width={350} height={400} loading="lazy" />
            </div>
          </div>
          
          <div class="mosaic__item mosaic__item--accent" data-speed="0.8">
            <div class="mosaic__image-wrap">
              <Image src={image3} alt="Travail social" class="mosaic__img" width={250} height={250} loading="lazy" />
            </div>
          </div>
        </div>
        
        <div class="mosaic__shapes">
          <div class="mosaic__shape mosaic__shape--1"></div>
          <div class="mosaic__shape mosaic__shape--2"></div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="hero__gradient"></div>
</section>

<style lang="scss">
  .hero {
    position: relative;
    padding-top: 140px;
    padding-bottom: 80px;
    min-height: 100vh;
    display: flex;
    align-items: center;
    background-color: var(--color-primary);
    overflow: hidden;

    @media (max-width: 1024px) {
      padding-top: 120px;
      padding-bottom: 60px;
      min-height: auto;
    }

    @media (max-width: 768px) {
      padding-top: 100px;
      padding-bottom: 80px;
      min-height: 100svh;

      .container {
        padding-left: 0;
        padding-right: 0;
      }
    }

    &__gradient {
      position: absolute;
      top: 0;
      right: 0;
      width: 60%;
      height: 100%;
      background: radial-gradient(ellipse at 70% 30%, rgba(255, 223, 92, 0.08) 0%, transparent 60%);
      pointer-events: none;
      z-index: 0;
    }

    &__grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 80px;
      align-items: center;
      position: relative;
      z-index: 1;

      @media (max-width: 1200px) {
        gap: 60px;
      }

      @media (max-width: 1024px) {
        grid-template-columns: 1fr;
        gap: 50px;
      }
    }

    &__content {
      @media (max-width: 768px) {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: calc(100svh - 180px);
        padding: 0 24px;
      }

      @media (max-width: 1024px) {
        text-align: center;
      }
    }

    &__badge {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 6px 14px;
      background: rgba(255, 223, 92, 0.1);
      border: 1px solid var(--color-accent);
      border-radius: 100px;
      font-size: 12px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 24px;
      color: var(--color-accent);
      opacity: 0;
      transform: translateY(20px);

      .dot {
        width: 6px;
        height: 6px;
        background: var(--color-accent);
        border-radius: 50%;
        animation: pulse 2s ease-in-out infinite;
      }
    }

    &__title {
      font-family: var(--font-headline);
      font-size: clamp(36px, 5vw, 64px);
      line-height: 1.15;
      letter-spacing: -0.025em;
      margin-bottom: 24px;
      font-weight: 700;
      color: var(--color-white);
      opacity: 0;
      transform: translateY(30px);
    }

    &__description {
      max-width: 500px;
      margin-bottom: 32px;
      line-height: 1.6;
      color: rgba(255, 255, 255, 0.8);
      opacity: 0;
      transform: translateY(20px);

      @media (max-width: 1024px) {
        margin-left: auto;
        margin-right: auto;
      }
    }

    &__actions {
      display: flex;
      gap: 16px;
      margin-bottom: 48px;
      opacity: 0;
      transform: translateY(20px);

      .btn--outline {
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: var(--color-white);
        &:hover { border-color: var(--color-white); }
      }

      @media (max-width: 1024px) {
        justify-content: center;
      }

      @media (max-width: 480px) {
        flex-direction: column;
        align-items: center;
      }
    }

    &__trust {
      display: flex;
      align-items: center;
      gap: 24px;
      opacity: 0;
      transform: translateY(20px);

      @media (max-width: 1024px) {
        justify-content: center;
      }

      .trust-item { display: flex; flex-direction: column; }
      .trust-num { font-family: var(--font-headline); font-size: 28px; font-weight: 700; color: var(--color-white); }
      .trust-text { font-size: 12px; font-weight: 700; text-transform: uppercase; color: rgba(255, 255, 255, 0.6); letter-spacing: 0.02em; }
      .trust-divider { width: 1px; height: 32px; background: rgba(255, 255, 255, 0.2); }
    }
  }

  // MOSAIC GRID
  .hero__mosaic {
    position: relative;
    height: 560px;

    @media (max-width: 1200px) {
      height: 480px;
    }

    @media (max-width: 1024px) {
      height: 420px;
      max-width: 550px;
      margin: 0 auto;
    }

    @media (max-width: 768px) {
      display: none;
    }
  }

  .mosaic__grid {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .mosaic__item {
    position: absolute;
    border-radius: 20px;
    overflow: hidden;
    opacity: 0;
    will-change: transform;

    @media (max-width: 480px) {
      border-radius: 14px;
    }
  }

  .mosaic__image-wrap {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: inherit;
  }

  .mosaic__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .mosaic__item:hover .mosaic__img {
    transform: scale(1.08);
  }

  .mosaic__label {
    position: absolute;
    bottom: 16px;
    left: 16px;
    background: var(--color-white);
    padding: 8px 14px;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    border-radius: 6px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    z-index: 2;

    @media (max-width: 480px) {
      padding: 6px 10px;
      font-size: 9px;
      bottom: 12px;
      left: 12px;
    }
  }

  // Main image - large, center-right
  .mosaic__item--main {
    width: 65%;
    height: 75%;
    top: 12%;
    right: 0;
    z-index: 3;
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.15);

    @media (max-width: 768px) {
      width: 90%;
      height: 100%;
      top: 0;
      right: 5%;
      border-radius: 16px;
    }
  }

  // Top left image - hide on mobile
  .mosaic__item--top {
    width: 42%;
    height: 40%;
    top: 0;
    left: 0;
    z-index: 2;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.12);

    @media (max-width: 768px) {
      display: none;
    }
  }

  // Bottom left image - hide on mobile
  .mosaic__item--bottom {
    width: 35%;
    height: 45%;
    bottom: 0;
    left: 5%;
    z-index: 4;
    border: 5px solid var(--color-bg);
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.14);

    @media (max-width: 768px) {
      display: none;
    }
  }

  // Accent small image - hide on tablet/mobile
  .mosaic__item--accent {
    width: 25%;
    aspect-ratio: 1;
    top: 50%;
    left: 30%;
    transform: translateY(-50%);
    z-index: 5;
    border: 4px solid var(--color-bg);
    border-radius: 16px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);

    @media (max-width: 1024px) {
      display: none;
    }
  }

  // Decorative shapes
  .mosaic__shapes {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .mosaic__shape {
    position: absolute;
    border-radius: 24px;
    opacity: 0;
    will-change: transform;

    &--1 {
      width: 120px;
      height: 120px;
      background: var(--color-accent);
      top: -20px;
      right: 15%;
      z-index: 0;

      @media (max-width: 1024px) {
        width: 80px;
        height: 80px;
        top: -15px;
        right: 0;
      }

      @media (max-width: 480px) {
        width: 60px;
        height: 60px;
        top: -10px;
        right: -5px;
      }
    }

    &--2 {
      width: 80px;
      height: 80px;
      background: var(--color-surface);
      border: 2px solid var(--color-border);
      bottom: 10%;
      right: -20px;
      z-index: 0;

      @media (max-width: 768px) {
        display: none;
      }
    }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);
  
  // Safari-compatible initialization
  const initHeroAnimations = () => {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    
    if (prefersReducedMotion) {
      gsap.set(".animate-in, .mosaic__item, .mosaic__shape", { opacity: 1, y: 0, x: 0, scale: 1, rotation: 0 });
      return;
    }

    // Set initial states explicitly for Safari
    gsap.set(".hero__badge", { opacity: 0, y: 20 });
    gsap.set(".hero__title", { opacity: 0, y: 30 });
    gsap.set(".hero__description", { opacity: 0, y: 20 });
    gsap.set(".hero__actions", { opacity: 0, y: 20 });
    gsap.set(".hero__trust", { opacity: 0, y: 20 });
    gsap.set(".mosaic__item", { opacity: 0 });
    gsap.set(".mosaic__shape", { opacity: 0, scale: 0 });

    const masterTL = gsap.timeline({ 
      defaults: { ease: "power4.out" }
    });

    // Content animations
    masterTL
      .to(".hero__badge", { 
        opacity: 1, 
        y: 0, 
        duration: 0.8 
      })
      .to(".hero__title", { 
        opacity: 1, 
        y: 0, 
        duration: 1 
      }, "-=0.5")
      .to(".hero__description", { 
        opacity: 1, 
        y: 0, 
        duration: 0.8 
      }, "-=0.6")
      .to(".hero__actions", { 
        opacity: 1, 
        y: 0, 
        duration: 0.8 
      }, "-=0.5")
      .to(".hero__trust", { 
        opacity: 1, 
        y: 0, 
        duration: 0.8 
      }, "-=0.5");

    // Mosaic animations with stagger
    const mosaicTL = gsap.timeline({ 
      defaults: { ease: "power3.out" }
    });

    // Shapes first
    mosaicTL
      .fromTo(".mosaic__shape--1", 
        { scale: 0, rotation: -45, opacity: 0 },
        { scale: 1, rotation: 12, opacity: 0.6, duration: 1.2, ease: "elastic.out(1, 0.6)" }
      )
      .fromTo(".mosaic__shape--2", 
        { scale: 0, rotation: 45, opacity: 0 },
        { scale: 1, rotation: -8, opacity: 0.8, duration: 1, ease: "elastic.out(1, 0.7)" },
        "-=0.8"
      );

    // Images with creative entrances
    mosaicTL
      .fromTo(".mosaic__item--main", 
        { opacity: 0, y: 80, scale: 0.9 },
        { opacity: 1, y: 0, scale: 1, duration: 1.2 },
        "-=0.6"
      )
      .fromTo(".mosaic__item--top", 
        { opacity: 0, x: -60, y: -40 },
        { opacity: 1, x: 0, y: 0, duration: 1 },
        "-=0.8"
      )
      .fromTo(".mosaic__item--bottom", 
        { opacity: 0, y: 60, scale: 0.85 },
        { opacity: 1, y: 0, scale: 1, duration: 1.1 },
        "-=0.7"
      )
      .fromTo(".mosaic__item--accent", 
        { opacity: 0, scale: 0.5, rotation: -15 },
        { opacity: 1, scale: 1, rotation: 0, duration: 0.9, ease: "back.out(1.5)" },
        "-=0.5"
      );

    // Start mosaic animation slightly after content
    masterTL.add(mosaicTL, 0.3);

    // Scroll-based parallax (desktop only)
    if (window.innerWidth > 768) {
      // Parallax on scroll
      gsap.to(".mosaic__item--main", {
        y: -60,
        scrollTrigger: {
          trigger: ".hero",
          start: "top top",
          end: "bottom top",
          scrub: 1
        }
      });

      gsap.to(".mosaic__item--top", {
        y: -100,
        x: -20,
        scrollTrigger: {
          trigger: ".hero",
          start: "top top",
          end: "bottom top",
          scrub: 1.2
        }
      });

      gsap.to(".mosaic__item--bottom", {
        y: -40,
        scrollTrigger: {
          trigger: ".hero",
          start: "top top",
          end: "bottom top",
          scrub: 0.8
        }
      });

      gsap.to(".mosaic__item--accent", {
        y: -80,
        rotation: 8,
        scrollTrigger: {
          trigger: ".hero",
          start: "top top",
          end: "bottom top",
          scrub: 1
        }
      });

      gsap.to(".mosaic__shape--1", {
        y: -120,
        rotation: 30,
        scrollTrigger: {
          trigger: ".hero",
          start: "top top",
          end: "bottom top",
          scrub: 1.5
        }
      });

      gsap.to(".mosaic__shape--2", {
        y: -50,
        rotation: -20,
        scrollTrigger: {
          trigger: ".hero",
          start: "top top",
          end: "bottom top",
          scrub: 1
        }
      });

      // Content fade out on scroll
      gsap.to(".hero__content", {
        opacity: 0.3,
        y: -30,
        scrollTrigger: {
          trigger: ".hero",
          start: "top top",
          end: "60% top",
          scrub: 1
        }
      });
    }
    
    // Refresh ScrollTrigger for Safari
    ScrollTrigger.refresh();
  };

  // Use DOMContentLoaded with Safari-safe fallback
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initHeroAnimations);
  } else {
    // DOM already loaded, run immediately
    initHeroAnimations();
  }
</script>
