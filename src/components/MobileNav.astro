<div class="mobile-nav" id="mobile-nav">
  <div class="mobile-nav__overlay"></div>
  <div class="mobile-nav__content">
    <div class="mobile-nav__header">
      <img src="/assets/Logo1.svg" alt="Jeunesse & Co" class="mobile-nav__logo" width="140" height="32" />
      <button class="mobile-nav__close" id="mobile-nav-close">
        <span></span>
        <span></span>
      </button>
    </div>
    
    <nav class="mobile-nav__links">
      <a href="/#about" class="mobile-link">L'équipe</a>
      <a href="/#method" class="mobile-link">Méthode</a>
      <a href="/#metier" class="mobile-link">Le Métier</a>
      <a href="/impulsion" class="mobile-link">Programme Impulsion</a>
      <a href="/#contact" class="mobile-link mobile-link--cta">Contact</a>
    </nav>
    
    <div class="mobile-nav__footer">
      <p>Chemin de la Vendée 29<br>1213 Petit Lancy</p>
      <a href="tel:+41227311947" class="mt-16">+41 (0)22 731 19 47</a>
    </div>
  </div>
</div>

<style lang="scss">
  .mobile-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2000;
    visibility: hidden;
    pointer-events: none;

    &.is-active {
      visibility: visible;
      pointer-events: all;
    }

    &__overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    &.is-active &__overlay {
      opacity: 1;
    }

    &__content {
      position: absolute;
      top: 12px;
      right: 12px;
      bottom: 12px;
      width: calc(100% - 24px);
      max-width: 320px;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      padding: 28px;
      display: flex;
      flex-direction: column;
      transform: translateX(calc(100% + 24px));
      transition: transform 0.5s cubic-bezier(0.32, 0.72, 0, 1);
      border-radius: 20px;
      box-shadow: 
        0 0 0 1px rgba(0, 0, 0, 0.06),
        0 20px 50px rgba(0, 0, 0, 0.15);
    }

    &.is-active &__content {
      transform: translateX(0);
    }

    &__header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
      padding-bottom: 20px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    }

    &__logo {
      height: 20px;
      opacity: 0.8;
    }

    &__close {
      background: rgba(0, 0, 0, 0.05);
      border: none;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      position: relative;
      cursor: pointer;
      transition: background 0.2s ease;

      &:hover {
        background: rgba(0, 0, 0, 0.1);
      }

      span {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 14px;
        height: 1.5px;
        background: var(--color-primary);
        border-radius: 1px;
        
        &:first-child { transform: translate(-50%, -50%) rotate(45deg); }
        &:last-child { transform: translate(-50%, -50%) rotate(-45deg); }
      }
    }

    &__links {
      display: flex;
      flex-direction: column;
      gap: 6px;
    }

    .mobile-link {
      font-family: var(--font-body);
      font-size: 15px;
      font-weight: 500;
      text-decoration: none;
      color: var(--color-text);
      padding: 14px 16px;
      border-radius: 12px;
      transition: all 0.2s ease;
      letter-spacing: -0.01em;

      &:hover {
        background: rgba(0, 0, 0, 0.04);
        color: var(--color-primary);
      }
      
      &--cta {
        margin-top: 16px;
        font-size: 13px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        background: var(--color-primary);
        color: var(--color-white);
        padding: 14px 20px;
        text-align: center;
        border-radius: 12px;

        &:hover {
          background: var(--color-accent);
          color: var(--color-primary);
        }
      }
    }

    &__footer {
      margin-top: auto;
      padding-top: 24px;
      border-top: 1px solid rgba(0, 0, 0, 0.06);
      
      p { 
        font-size: 12px; 
        color: var(--color-text-muted); 
        line-height: 1.5;
        margin: 0;
      }
      a { 
        display: inline-block;
        margin-top: 12px;
        font-size: 13px;
        font-weight: 600; 
        color: var(--color-primary); 
        text-decoration: none;
      }
    }
  }
</style>

<script>
  const nav = document.getElementById('mobile-nav');
  const closeBtn = document.getElementById('mobile-nav-close');
  const toggleBtn = document.querySelector('.menu-toggle');
  const links = document.querySelectorAll('.mobile-link');

  const toggleNav = () => nav?.classList.toggle('is-active');

  toggleBtn?.addEventListener('click', toggleNav);
  closeBtn?.addEventListener('click', toggleNav);
  
  links.forEach(link => {
    link.addEventListener('click', () => {
      nav?.classList.remove('is-active');
    });
  });
</script>
