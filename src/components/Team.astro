        color: var(--color-accent);
        display: flex;
        align-items: center;
        justify-content: center;

        @media (max-width: 768px) {
          opacity: 0.5;
          transform: translateX(0);
        }
      }
    }

    &__cta {
      margin-top: 40px;
      padding: 32px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.1);

      p {
        margin: 0;
        font-size: 15px;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.8);
      }

      @media (max-width: 768px) {
        margin-top: 24px;
        padding: 24px;
      }
    }
  }

