---
const base = import.meta.env.BASE_URL;
---
<header class="header" id="header">
  <div class="header__inner container">
    <a href={`/`} class="header__logo">
      <img src={`/assets/Logo1-Blanc.svg`} alt="Jeunesse & Co" class="header__logo-img" width="140" height="32" />
    </a>
    
    <nav class="header__nav">
      <a href={`${base}/#about`} class="header__link">Notre vision</a>
      <a href={`${base}/#team`} class="header__link">L'équipe</a>
      <a href={`${base}/#method`} class="header__link">Méthode</a>
      <a href={`/impulsion`} class="header__link header__link--impulsion">Impulsion</a>
    </nav>

    <div class="header__actions">
      <a href={`${base}/#contact`} class="btn btn--header hide-mobile">Contact</a>
      <button class="menu-toggle" aria-label="Menu">
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<style lang="scss">
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 32px 0;
    transition: all 0.5s var(--ease-out);
    background: transparent;

    &--scrolled {
      background: rgba(17, 17, 17, 0.9);
      backdrop-filter: blur(20px);
      padding: 16px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    &__inner {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    &__logo {
      &-img {
        height: 48px;
        width: auto;
        
        @media (max-width: 768px) {
          height: 36px;
        }
      }
    }

    &__nav {
      display: flex;
      gap: 32px;
      position: absolute;
      left: 50%;
      transform: translateX(-50%);

      @media (max-width: 1024px) {
        display: none;
      }
    }

    &__link {
      font-size: 15px;
      font-weight: 500;
      color: rgba(255, 255, 255, 0.8);
      transition: all 0.3s var(--ease-out);
      text-decoration: none;
      
      &:hover {
        color: var(--color-accent);
      }
      
      &--impulsion {
        color: var(--color-accent);
        font-weight: 700;
      }
    }

    &__actions {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .btn--header {
      padding: 12px 28px;
      font-size: 14px;
      border-radius: 100px;
      background: transparent;
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: var(--color-white);
      
      &:hover {
        border-color: var(--color-accent);
        color: var(--color-accent);
        background: rgba(255, 223, 92, 0.1);
        transform: translateY(-2px);
      }
    }

    .menu-toggle {
      display: none;
      flex-direction: column;
      gap: 6px;
      background: none;
      border: none;
      cursor: pointer;
      padding: 10px;

      span {
        display: block;
        width: 24px;
        height: 2px;
        background: var(--color-white);
        transition: all 0.3s ease;
      }

      @media (max-width: 1024px) {
        display: flex;
      }
    }

    @media (max-width: 768px) {
      padding: 24px 0;
      
      .hide-mobile {
        display: none;
      }
    }
  }
</style>

<script>
  const header = document.getElementById('header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('header--scrolled');
    } else {
      header?.classList.remove('header--scrolled');
    }
  });
</script>
